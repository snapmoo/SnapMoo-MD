<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.report.detail.DetailReportActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/toolbar">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"

                android:background="@drawable/custom_bg_rounded_24"
                android:backgroundTint="@color/blue_50"
                android:paddingHorizontal="18dp"
                android:paddingTop="24dp"
                android:paddingBottom="12dp">

                <TextView
                    android:id="@+id/name"
                    style="@style/Heading4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:textColor="@color/blue_800"
                    app:layout_constraintEnd_toStartOf="@+id/tv_name"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <TextView
                    android:id="@+id/tv_name"
                    style="@style/Heading4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/blue_800"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/guidelineVertical"
                    app:layout_constraintTop_toTopOf="@id/name"
                    tools:text="Putu Adi Widyantara" />

                <TextView
                    android:id="@+id/email"
                    style="@style/Heading4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="Email"
                    android:textColor="@color/blue_800"
                    app:layout_constraintEnd_toStartOf="@+id/tv_email"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_name" />

                <TextView
                    android:id="@+id/tv_email"
                    style="@style/Heading4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/blue_800"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/guidelineVertical"
                    app:layout_constraintTop_toTopOf="@id/email"
                    tools:text="adi@bangkit.academy" />

                <TextView
                    android:id="@+id/phoneNumber"
                    style="@style/Heading4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:layout_marginEnd="24dp"
                    android:text="Phone Number"
                    android:textColor="@color/blue_800"
                    app:layout_constraintEnd_toStartOf="@id/guidelineVertical"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_email" />

                <TextView
                    android:id="@+id/tv_phoneNumber"
                    style="@style/Heading4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/blue_800"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/guidelineVertical"
                    app:layout_constraintTop_toTopOf="@id/phoneNumber"
                    tools:text="082121343232" />

                <TextView
                    android:id="@+id/address"
                    style="@style/Heading4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="Address"
                    android:textColor="@color/blue_800"
                    app:layout_constraintEnd_toStartOf="@+id/tv_address"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/phoneNumber" />

                <TextView
                    android:id="@+id/tv_address"
                    style="@style/Heading4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/blue_800"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/guidelineVertical"
                    app:layout_constraintTop_toTopOf="@id/address"
                    tools:text="Address" />

                <TextView
                    android:id="@+id/total"
                    style="@style/Heading4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="Total Cattle"
                    android:textColor="@color/blue_800"
                    app:layout_constraintEnd_toStartOf="@+id/tv_total"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_address" />

                <TextView
                    android:id="@+id/tv_total"
                    style="@style/Heading4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/blue_800"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/guidelineVertical"
                    app:layout_constraintTop_toTopOf="@id/total"
                    tools:text="8" />

                <TextView
                    android:id="@+id/condition"
                    style="@style/Heading4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:layout_marginEnd="24dp"
                    android:text="Condition of The Cattle"
                    android:textColor="@color/blue_700"
                    app:layout_constraintEnd_toStartOf="@id/guidelineVertical"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/total" />

                <TextView
                    android:id="@+id/tv_condition"
                    style="@style/Heading4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:lines="4"
                    android:textColor="@color/blue_800"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/guidelineVertical"
                    app:layout_constraintTop_toTopOf="@id/condition"
                    tools:text="Condition of The Cattle" />

                <TextView
                    android:id="@+id/scan_result"
                    style="@style/Heading4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="Result Scan By SnapMoo"
                    android:textColor="@color/silver_600"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_condition" />

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    app:cardCornerRadius="24dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/scan_result">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/content_scan"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/custom_bg_gradient_ligth">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/image_scan"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:layout_marginVertical="8dp"
                            android:layout_marginStart="12dp"
                            android:background="@drawable/custom_bg_rounded_8"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:cardCornerRadius="18dp"
                            app:layout_constraintTop_toTopOf="parent">

                            <ImageView
                                android:id="@+id/iv_image_scan"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/custom_bg_rounded_8"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                tools:src="@drawable/image_scan" />
                        </androidx.cardview.widget.CardView>


                        <TextView

                            android:id="@+id/tv_clasify_result"
                            style="@style/Heading2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            app:layout_constraintEnd_toEndOf="@+id/tv_description"
                            app:layout_constraintStart_toEndOf="@id/image_scan"
                            app:layout_constraintTop_toTopOf="@id/image_scan"
                            tools:text="Positive" />

                        <TextView
                            android:id="@+id/tv_description"
                            style="@style/Heading4"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:text="FMD Indication"
                            app:layout_constraintEnd_toStartOf="@id/tv_score"
                            app:layout_constraintStart_toEndOf="@id/image_scan"
                            app:layout_constraintTop_toBottomOf="@id/tv_clasify_result" />

                        <TextView
                            android:id="@+id/tv_score"
                            style="@style/Heading"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="12dp"
                            android:background="@drawable/custom_bg_rounded_8"
                            android:backgroundTint="@color/white_50"
                            android:padding="16dp"
                            android:textColor="@color/blue_500"
                            app:layout_constraintBottom_toBottomOf="@id/image_scan"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@id/image_scan"
                            tools:text="75%" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guidelineVertical"
                    android:layout_width="wrap_content"
                    android:layout_height="64dp"
                    android:orientation="vertical"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintGuide_percent="0.4"
                    app:layout_constraintStart_toStartOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </ScrollView>

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/progressBar"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:background="@drawable/custom_bg_rounded_8"
        android:backgroundTint="@color/blue_50"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/loading" />
</androidx.constraintlayout.widget.ConstraintLayout>