<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.foot.FootActivity">


    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginBottom="40dp"
                android:background="@color/blue_100">

                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/view_pager"
                    android:layout_width="match_parent"
                    android:layout_height="260dp"
                    android:layout_margin="8dp"
                    android:background="@drawable/custom_bg_rounded_8"
                    app:layout_constraintTop_toTopOf="parent" />

                <LinearLayout
                    android:id="@+id/indicator"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|center_horizontal"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toBottomOf="@id/view_pager" />
            </androidx.constraintlayout.widget.ConstraintLayout>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="18dp">

                <TextView
                    android:id="@+id/title_case"
                    style="@style/Heading"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/foot_cases"
                    android:textColor="@color/blue_700"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/sub_title_case"
                    style="@style/Heading2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:gravity="center"
                    android:text="@string/symptoms_of_fmd_in_the_foot"
                    android:textColor="@color/white_950"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/title_case" />


                <TextView
                    android:id="@+id/number1"
                    style="@style/Text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/_1"
                    android:textColor="@color/white_800"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="12dp"
                    app:layout_constraintTop_toBottomOf="@id/sub_title_case" />

                <TextView
                    android:id="@+id/symptoms_title1"
                    style="@style/BodyTextInfo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:maxLines="10"
                    android:text="@string/nail_sores"
                    android:textColor="@color/white_800"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/guidelineVertical"
                    app:layout_constraintTop_toTopOf="@id/number1" />

                <TextView
                    android:id="@+id/symptoms_text1"
                    style="@style/Text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="12dp"
                    android:justificationMode="inter_word"
                    android:maxLines="10"
                    android:text="@string/open_sores_and_inflammation_around_the_nail_the_area_around_the_nail_looks_red_swollen_and_inflamed_these_open_wounds_can_be_caused_by_trauma_infection_or_other_health_conditions_from_the_open_wound_there_is_often_a_discharge_of_pus_or_exudate_indicating_that_an_infection_has_occurred"
                    android:textColor="@color/white_700"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="@+id/symptoms_title1"
                    app:layout_constraintTop_toBottomOf="@id/symptoms_title1" />

                <TextView
                    android:id="@+id/number2"
                    style="@style/Text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="@string/_2"
                    android:textColor="@color/white_800"
                    app:layout_constraintStart_toStartOf="@id/number1"
                    app:layout_constraintTop_toBottomOf="@id/symptoms_text1" />

                <TextView
                    android:id="@+id/symptoms_title2"
                    style="@style/BodyTextInfo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:maxLines="10"
                    android:text="@string/blisters_and_erosions"
                    android:textColor="@color/white_800"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/guidelineVertical"
                    app:layout_constraintTop_toTopOf="@id/number2" />

                <TextView
                    android:id="@+id/symptoms_text2"
                    style="@style/Text"
                    android:layout_width="0dp"
                    android:layout_marginEnd="12dp"
                    android:layout_height="wrap_content"
                    android:justificationMode="inter_word"
                    android:maxLines="10"
                    android:text="@string/a_blister_bursts_and_becomes_an_erosion_of_the_skin_around_the_nail_a_blister_caused_by_friction_or_infection_contains_clear_fluid_or_pus_when_the_blister_bursts_it_leaves_an_area_of_erosion_that_is_prone_to_infection_erosions_are_often_found_in_the_area_between_the_toes_interdigital_where_moisture_and_friction_are_more_common"
                    android:textColor="@color/white_700"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/symptoms_title2"
                    app:layout_constraintTop_toBottomOf="@id/symptoms_title2" />


                <TextView
                    android:id="@+id/number3"
                    style="@style/Text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="@string/_3"
                    android:textColor="@color/white_800"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/symptoms_text2" />

                <TextView
                    android:id="@+id/symptoms_title3"
                    style="@style/BodyTextInfo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:maxLines="10"
                    android:text="@string/swelling"
                    android:textColor="@color/white_800"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/guidelineVertical"
                    app:layout_constraintTop_toTopOf="@id/number3" />

                <TextView
                    android:id="@+id/symptoms_text3"
                    style="@style/Text"
                    android:layout_width="0dp"
                    android:layout_marginEnd="12dp"
                    android:layout_height="wrap_content"
                    android:justificationMode="inter_word"
                    android:maxLines="10"
                    android:text="@string/swelling_around_the_nail_area_swelling_edema_occurs_due_to_the_accumulation_of_fluid_in_the_tissues_around_the_nail_this_area_appears_enlarged_shiny_and_may_feel_warm_to_the_touch_swelling_may_cause_discomfort_and_interfere_with_the_normal_functioning_of_the_foot"
                    android:textColor="@color/white_700"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/symptoms_title3"
                    app:layout_constraintTop_toBottomOf="@id/symptoms_title3" />

                <TextView
                    android:id="@+id/number4"
                    style="@style/Text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="@string/_4"
                    android:textColor="@color/white_800"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/symptoms_text3" />

                <TextView
                    android:id="@+id/symptoms_title4"
                    style="@style/BodyTextInfo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:maxLines="10"
                    android:text="@string/difficulty_walking"
                    android:textColor="@color/white_800"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/guidelineVertical"
                    app:layout_constraintTop_toTopOf="@id/number4" />

                <TextView
                    android:id="@+id/symptoms_text4"
                    style="@style/Text"
                    android:layout_width="0dp"
                    android:layout_marginEnd="12dp"
                    android:layout_height="wrap_content"
                    android:justificationMode="inter_word"
                    android:maxLines="10"
                    android:text="@string/animals_show_difficulty_walking_and_obvious_pain_when_walking_they_may_limp_avoid_using_the_affected_leg_or_show_obvious_pain_when_the_affected_leg_touches_the_ground"
                    android:textColor="@color/white_700"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/symptoms_title4"
                    app:layout_constraintTop_toBottomOf="@id/symptoms_title4" />

                <LinearLayout
                    app:layout_constraintTop_toBottomOf="@id/symptoms_text4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="24dp"
                    android:backgroundTint="@color/blue_100"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="12dp"
                    android:background="@drawable/custom_bg_rounded_8"
                    android:orientation="horizontal">
                    <View
                        android:layout_width="3dp"
                        android:layout_height="match_parent"
                        android:layout_marginVertical="2dp"
                        android:background="@color/blue_700" />
                    <TextView
                        android:id="@+id/description"
                        style="@style/Text"
                        android:layout_marginStart="12dp"
                        android:layout_width="wrap_content"
                        android:layout_marginEnd="12dp"
                        android:layout_height="wrap_content"
                        android:justificationMode="inter_word"
                        android:maxLines="10"
                        android:text="@string/the_above_symptoms_can_be_caused_by_various_conditions_such_as_bacterial_or_fungal_infections_physical_trauma_allergies_or_systemic_diseases"
                        android:textColor="@color/white_950"

 />

                </LinearLayout>

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guidelineVertical"
                    android:layout_width="wrap_content"
                    android:layout_height="64dp"
                    android:orientation="vertical"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintGuide_percent="0.06"
                    app:layout_constraintStart_toStartOf="parent" />


            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="34dp"
                android:layout_marginBottom="100dp"
                android:layout_marginHorizontal="8dp"
                android:background="@drawable/custom_bg_rounded_24"
                android:backgroundTint="@color/blue_700"
                android:paddingHorizontal="12dp"
                android:paddingBottom="40dp"
                app:layout_constraintTop_toBottomOf="@id/symptoms_text4">

                <TextView
                    android:id="@+id/treatment_title"
                    style="@style/Heading3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="34dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginEnd="24dp"
                    android:text="@string/treatment_of_fmd_symptoms_in_the_foot"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:layout_marginHorizontal="12dp"
                    android:layout_marginTop="8dp"
                    android:background="@color/silver_200"
                    app:layout_constraintTop_toBottomOf="@id/treatment_title" />

                <TextView
                    android:id="@+id/number_1"
                    style="@style/BodyTextInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="34dp"
                    android:text="@string/_1"
                    android:textColor="@color/white_50"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/treatment_title" />

                <TextView
                    android:id="@+id/treatment_1"
                    style="@style/BodyTextInfo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="12dp"
                    android:justificationMode="inter_word"

                    android:maxLines="10"
                    android:text="@string/cleaning_the_wound_with_an_antiseptic_to_prevent_further_infection"
                    android:textColor="@color/white_50"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@id/treatment_title"
                    app:layout_constraintTop_toTopOf="@id/number_1" />

                <TextView
                    android:id="@+id/number_2"
                    style="@style/BodyTextInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="12dp"
                    android:text="@string/_2"
                    android:textColor="@color/white_50"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/treatment_1" />

                <TextView
                    android:id="@+id/treatment_2"
                    style="@style/BodyTextInfo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="12dp"
                    android:justificationMode="inter_word"
                    android:maxLines="10"

                    android:text="@string/administering_appropriate_antibiotics_or_antifungals_based_on_the_cause_of_infection"
                    android:textColor="@color/white_50"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@id/treatment_title"
                    app:layout_constraintTop_toTopOf="@id/number_2" />

                <TextView
                    android:id="@+id/number_3"
                    style="@style/BodyTextInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="12dp"
                    android:text="@string/_3"
                    android:textColor="@color/white_50"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/treatment_2" />

                <TextView
                    android:id="@+id/treatment_3"
                    style="@style/BodyTextInfo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="12dp"
                    android:maxLines="10"
                    android:text="@string/protecting_the_wound_from_dirt_and_reducing_the_risk_of_infection_by_using_a_bandage_or_wound_dressing"
                    android:textColor="@color/white_50"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@id/treatment_title"
                    app:layout_constraintTop_toTopOf="@id/number_3" />

                <TextView
                    android:id="@+id/number_4"
                    style="@style/BodyTextInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="12dp"
                    android:text="@string/_4"
                    android:textColor="@color/white_50"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/treatment_3" />

                <TextView
                    android:id="@+id/treatment_4"
                    style="@style/BodyTextInfo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="12dp"
                    android:justificationMode="inter_word"
                    android:maxLines="10"
                    android:text="@string/consultation_with_a_veterinarian_or_fmd_task_force_for_proper_diagnosis_and_effective_treatment"
                    android:textColor="@color/white_50"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@id/treatment_title"
                    app:layout_constraintTop_toTopOf="@id/number_4" />

                <TextView
                    android:id="@+id/number_5"
                    style="@style/BodyTextInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="12dp"
                    android:text="@string/_5"
                    android:textColor="@color/white_50"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/treatment_4" />

                <TextView
                    android:id="@+id/treatment_5"
                    style="@style/BodyTextInfo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="12dp"
                    android:justificationMode="inter_word"
                    android:maxLines="10"
                    android:text="@string/consult_a_veterinarian_for_a_proper_diagnosis_and_appropriate_treatment_recommendations"
                    android:textColor="@color/white_50"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@id/treatment_title"
                    app:layout_constraintTop_toTopOf="@id/number_5" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>